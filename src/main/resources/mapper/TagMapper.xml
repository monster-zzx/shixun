<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bar.mapper.TagMapper">

    <resultMap id="BaseResultMap" type="com.bar.beans.Tag">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="color" column="color"/>
        <result property="createTime" column="create_time"/>
        <result property="classify" column="classify"/>
    </resultMap>

    <!-- 插入标签 -->
    <insert id="insertTag" parameterType="com.bar.beans.Tag" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tag (name, description, color, create_time)
        VALUES (#{name}, #{description}, #{color}, NOW())
    </insert>

    <!-- 根据ID查询标签 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM tag WHERE id = #{id}
    </select>

    <!-- 根据名称查询标签 -->
    <select id="selectByName" resultMap="BaseResultMap">
        SELECT * FROM tag WHERE name = #{name}
    </select>

    <!-- 查询所有标签 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM tag
    </select>

    <!-- 根据贴吧ID查询该贴吧的所有标签 -->
    <select id="selectTagsByBarId" resultMap="BaseResultMap">
        SELECT t.*
        FROM tag t
        INNER JOIN bar_tag bt ON t.id = bt.tag_id
        WHERE bt.bar_id = #{barId}
        ORDER BY bt.create_time DESC
    </select>

    <!-- 为贴吧添加标签 -->
    <insert id="addTagToBar">
        INSERT IGNORE INTO bar_tag (bar_id, tag_id, create_time)
        VALUES (#{barId}, #{tagId}, NOW())
    </insert>

    <!-- 移除贴吧的某个标签 -->
    <delete id="removeTagFromBar">
        DELETE FROM bar_tag
        WHERE bar_id = #{barId} AND tag_id = #{tagId}
    </delete>

    <!-- 移除贴吧的所有标签 -->
    <delete id="removeAllTagsFromBar">
        DELETE FROM bar_tag WHERE bar_id = #{barId}
    </delete>

    <!-- 更新标签信息 -->
    <update id="updateTag" parameterType="com.bar.beans.Tag">
        UPDATE tag SET
        name = #{name},
        description = #{description},
        color = #{color}
        WHERE id = #{id}
    </update>

    <!-- 删除标签 -->
    <delete id="deleteTag">
        DELETE FROM tag WHERE id = #{id}
    </delete>

    <!-- 统计标签使用次数 -->
    <select id="countBarsByTagId" resultType="int">
        SELECT COUNT(*) FROM bar_tag WHERE tag_id = #{tagId}
    </select>

    <!-- 查询贴吧详情（包含标签） -->
    <select id="selectBarWithTagsById" resultType="com.bar.beans.Bar">
        SELECT
        b.id,
        b.name,
        b.description,
        b.icon_url AS iconUrl,
        b.owner_user_id AS ownerUserId,
        b.status,
        b.pubtime,
        b.updated_at AS updatedAt
        FROM bar b
        WHERE b.id = #{id}
    </select>

    <!-- 根据标签ID查询使用该标签的所有贴吧ID -->
    <select id="selectBarIdsByTagId" resultType="java.lang.Integer">
        SELECT bar_id FROM bar_tag WHERE tag_id = #{tagId}
    </select>
</mapper>