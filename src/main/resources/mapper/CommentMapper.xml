<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bar.mapper.CommentMapper">

    <insert id="insertComment" parameterType="com.bar.beans.Comment" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO comment
        (post_id, user_id, content, pubtime)
        VALUES
        (#{postId}, #{userId}, #{content}, #{pubtime})
    </insert>

    <select id="selectByPostId" resultType="com.bar.beans.Comment">
        SELECT * FROM comment WHERE post_id = #{postId} ORDER BY pubtime ASC
    </select>

    <select id="selectById" resultType="com.bar.beans.Comment">
        SELECT * FROM comment WHERE id = #{id}
    </select>

    <delete id="deleteCommentById" parameterType="int">
        DELETE FROM comment WHERE id = #{id}
    </delete>

    <update id="updateComment" parameterType="com.bar.beans.Comment">
        UPDATE comment SET
            content = #{content},
            pubtime = NOW()
        WHERE id = #{id}
    </update>

</mapper>